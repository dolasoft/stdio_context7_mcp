{
  "name": "stdio_context7_mcp",
  "version": "1.0.0",
  "description": "STDIO Context7 MCP Server - Up-to-date code documentation for LLMs and AI code editors",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "stdio-context7-mcp": "./dist/server.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/server.js",
    "start": "node dist/server.js",
    "dev": "npm run build && npm start",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "llm",
    "ai",
    "documentation",
    "context7"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@dolasoftfree/logger": "^3.1.1",
    "@modelcontextprotocol/sdk": "^1.18.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "supertest": "^7.1.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
