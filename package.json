{
  "name": "@dolasoft/stdio-context7-mcp-server",
  "version": "1.0.0",
  "description": "Context7 MCP Server for Docker MCP Toolkit - Up-to-date library documentation for Claude Code and AI assistants via Model Context Protocol",
  "main": "dist/server.js",
  "bin": {
    "stdio-context7-mcp": "./dist/server.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "docker-mcp-toolkit",
    "claude-code",
    "llm",
    "ai",
    "documentation",
    "context7",
    "docker",
    "stdio",
    "cursor",
    "claude",
    "windsurf",
    "library-docs"
  ],
  "author": {
    "name": "DolaSoft",
    "email": "info@dolasoft.com",
    "url": "https://github.com/dolasoft"
  },
  "license": "MIT",
  "dependencies": {
    "@dolasoftfree/logger": "^3.1.1",
    "@modelcontextprotocol/sdk": "^1.18.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.6.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-commits-parser": "^6.2.0",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "supertest": "^7.1.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dolasoft/stdio_stdio-context7_mcp.git",
    "directory": "."
  },
  "bugs": {
    "url": "https://github.com/dolasoft/stdio_context7_mcp/issues"
  },
  "homepage": "https://github.com/dolasoft/stdio_context7_mcp#readme",
  "files": [
    "dist/",
    "examples/",
    "README.md",
    "SUBMISSION.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.8.1",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/server.js",
    "start": "node dist/server.js",
    "dev": "npm run build && npm start",
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "vitest",
    "test:watch": "npm run test -- --watch",
    "test:ui": "npm run test -- --ui",
    "test:coverage": "npm run test -- --coverage",
    "test:ci": "npm run test -- --run --coverage",
    "ci": "npm run lint && npm run test:ci && npm run build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "release": "npm run changelog && git add CHANGELOG.md && git commit -m 'chore: update changelog'",
    "docker:build": "./build-docker.sh",
    "docker:test": "docker run -i --rm stdio-context7-mcp:latest",
    "mcp:test": "echo '{\"jsonrpc\":\"2.0\",\"id\":1,\"method\":\"initialize\",\"params\":{\"protocolVersion\":\"2024-11-05\",\"capabilities\":{\"roots\":{\"listChanged\":true},\"sampling\":{}},\"clientInfo\":{\"name\":\"test-client\",\"version\":\"1.0.0\"}}}' | node dist/server.js"
  },
  "mcp": {
    "name": "stdio-context7",
    "version": "1.0.0",
    "description": "Context7 library documentation server for Docker MCP Toolkit",
    "transport": "stdio",
    "capabilities": {
      "tools": true
    },
    "tools": [
      "resolve-library-id",
      "get-library-docs"
    ]
  }
}
