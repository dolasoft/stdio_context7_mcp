{
  "name": "stdio-context7",
  "version": "1.0.0",
  "description": "Context7 library documentation server for Docker MCP Toolkit",
  "author": {
    "name": "DolaSoft",
    "email": "info@dolasoft.com",
    "url": "https://github.com/dolasoft"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dolasoft/stdio_stdio-context7_mcp.git"
  },
  "homepage": "https://github.com/dolasoft/stdio_stdio-context7_mcp#readme",
  "bugs": {
    "url": "https://github.com/dolasoft/stdio_stdio-context7_mcp/issues"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "stdio-context7",
    "documentation",
    "docker",
    "toolkit",
    "ai",
    "llm"
  ],
  "mcp": {
    "name": "stdio-context7",
    "version": "1.0.0",
    "description": "Context7 library documentation server for Docker MCP Toolkit",
    "transport": "stdio",
    "capabilities": {
      "tools": true,
      "resources": true,
      "prompts": true
    },
    "tools": [
      {
        "name": "resolve-library-id",
        "description": "Resolves a general library name into a Context7-compatible library ID",
        "inputSchema": {
          "type": "object",
          "properties": {
            "libraryName": {
              "type": "string",
              "description": "The name of the library to search for"
            }
          },
          "required": ["libraryName"]
        }
      },
      {
        "name": "get-library-docs",
        "description": "Fetches comprehensive documentation for a library using a Context7-compatible library ID",
        "inputSchema": {
          "type": "object",
          "properties": {
            "stdio-context7CompatibleLibraryID": {
              "type": "string",
              "description": "Exact Context7-compatible library ID"
            },
            "topic": {
              "type": "string",
              "description": "Focus the docs on a specific topic"
            },
            "tokens": {
              "type": "number",
              "description": "Maximum number of tokens to return",
              "default": 5000,
              "minimum": 1000
            }
          },
          "required": ["stdio-context7CompatibleLibraryID"]
        }
      },
      {
        "name": "generate-example",
        "description": "Generates a practical code example for a specific library and topic",
        "inputSchema": {
          "type": "object",
          "properties": {
            "library": {
              "type": "string",
              "description": "Library name or Context7-compatible ID"
            },
            "topic": {
              "type": "string",
              "description": "Specific topic or feature to demonstrate"
            },
            "language": {
              "type": "string",
              "description": "Programming language for the example",
              "default": "javascript"
            }
          },
          "required": ["library"]
        }
      }
    ],
    "resources": [
      {
        "uri": "stdio-context7://libraries",
        "name": "Available Libraries",
        "description": "Complete list of all available libraries in Context7",
        "mimeType": "application/json"
      },
      {
        "uri": "stdio-context7://docs/{libraryId}",
        "name": "Library Documentation",
        "description": "Documentation for a specific library",
        "mimeType": "text/markdown"
      }
    ],
    "prompts": [
      {
        "name": "generate-example",
        "description": "Generate a practical code example for a specific library and topic",
        "arguments": [
          {
            "name": "library",
            "description": "Library name or ID",
            "required": true
          },
          {
            "name": "topic",
            "description": "Specific topic or feature",
            "required": false
          },
          {
            "name": "language",
            "description": "Programming language",
            "required": false
          }
        ]
      },
      {
        "name": "explain-concept",
        "description": "Explain a programming concept with examples from a specific library",
        "arguments": [
          {
            "name": "concept",
            "description": "Concept to explain",
            "required": true
          },
          {
            "name": "library",
            "description": "Library to use for examples",
            "required": false
          }
        ]
      }
    ]
  },
  "docker": {
    "image": "ghcr.io/dolasoft/stdio_stdio-context7_mcp:latest",
    "platforms": ["linux/amd64", "linux/arm64"],
    "security": {
      "nonRoot": true,
      "readOnly": true,
      "capabilities": {
        "drop": ["ALL"]
      }
    },
    "environment": {
      "NODE_ENV": "production",
      "MCP_SERVER_NAME": "stdio-context7",
      "MCP_SERVER_VERSION": "1.0.0"
    },
    "volumes": [],
    "ports": [],
    "healthcheck": {
      "test": ["CMD", "sh", "-c", "echo '{\"jsonrpc\":\"2.0\",\"id\":1,\"method\":\"ping\",\"params\":{}}' | timeout 5 node dist/server.js --transport stdio > /dev/null"],
      "interval": "30s",
      "timeout": "10s",
      "retries": 3,
      "start_period": "5s"
    }
  },
  "requirements": {
    "docker": ">=20.10.0",
    "memory": "256Mi",
    "cpu": "250m"
  },
  "documentation": {
    "quickstart": "https://github.com/dolasoft/stdio_stdio-context7_mcp#quick-start",
    "configuration": "https://github.com/dolasoft/stdio_stdio-context7_mcp#configuration",
    "troubleshooting": "https://github.com/dolasoft/stdio_stdio-context7_mcp#troubleshooting"
  }
}
